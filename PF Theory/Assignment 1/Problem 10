#include <stdio.h>

int main()
{
	int DOBy, DOBm, DOBd, DIFFy, currY, currM, currD;

	printf("Enter DOB Year.");
	scanf("%d", &DOBy);

	printf("Enter Current Year.");
	scanf("%d", &currY);

	printf("Enter DOB Month.");
	scanf("%d", &DOBm);

	printf("Enter Current Month.");
	scanf("%d", &currM);
	
	printf("Enter DOB Date.");
	scanf("%d", &DOBd);

	printf("Enter Current Date.");
	scanf("%d", &currD);
	
	//Validation for months and days except feburary

	if ( DOBm == 1 || DOBm == 3 || DOBm == 5 || DOBm == 7 || DOBm == 8 || DOBm == 10 || DOBm == 12 )
	{	
		if ( (DOBm>31) || (DOBd<1) )
		{
		printf("Invlaid Day for DOB entered.\n");
		}
	}
	else if ( DOBm == 4 || DOBm == 6 || DOBm == 9 || DOBm == 11 )
	{	
		if ( (DOBd>30) || (DOBd<1) )
		{
			printf("Invlaid Day for DOB entered.\n");
		}
	}
	else 
	{
		printf("Wrong DOB month.\n");
	}
	
	if ( currM == 1 || currM == 3 || currM == 5 || currM == 7 || currM == 8 || currM == 10 || currM == 12 )
	{	
		if ( (currD>31) || (currD<1) )
		{
		printf("Invlaid Current Day entered.\n");
		}
	}
	else if ( currM == 4 || currM == 6 || currM == 9 || currM == 11 )
	{	
		if ( (currM>30) || (currD<1) )
		{
		printf("Invlaid Current Day entered.\n");
		}
	}
	else 
	{
		printf("Wrong Current month.\n");
	}


	//Leap Year and Feburary

	if ( DOBm == 2 )
	{
		if ( DOBy%400 == 0 )
		{
			if ((DOBd>29) || (DOBd<0)) 
			{
				printf("Invalid Day for DOB entered.\n");	
			}
		}
		else if ( DOBy%4 == 0 && DOBy%100 != 0 )
		{
			if ((DOBd>29) || (DOBd<0))
			{
				printf("Invalid Day for DOB entered.\n");	
			}
		}
		else
		{
			if ((DOBd>28) || (DOBd<0))
			{
				printf("Invalid Day for DOB entered.\n");	
			}
		}
	}
	
	if ( currM == 2 )
	{
		if ( currY%400 == 0 )
		{
			if ((currD>29) || (currD<0)) 
			{
				printf("Invalid Current Day entered.\n");	
			}
		}
		else if ( DOBy%4 == 0 && currY%100 != 0 )
		{
			if ((currD>29) || (currD<0))
			{
				printf("Invalid Current Day entered.\n");	
			}
		}
		else
		{
			if ((currD>28) || (currD<0))
			{
				printf("Invalid Current Day entered.\n");	
			}
		}
	}


	// Main function after validation
	
	if ( currY>=DOBy)
	{
		DIFFy = currY - DOBy;
		if ( currM>DOBm )
		{
			printf("Your age is: %d ", DIFFy);
		}
	
		else if ( currM == DOBm )
		{
		if ( currM>=DOBm )
		{
			printf("Your age is: %d ", DIFFy);
		}
		}
		else
		{
		DIFFy = currY - DOBy - 1;
		}
	}
	else
	{
	printf("DOB Year is more than Current Year, so invalid./n");
	}
return 0;
}

